{
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript][typescript][javascriptreact][typescriptreact][json][jsonc][css][graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "source.action.useSortedKeys.biome": "explicit",
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },

  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "emmet.showExpandedAbbreviation": "never",
  "peacock.color": "#a5b4fc",
  "typescript.experimental.useTsgo": false,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#d6ddfe",
    "activityBar.background": "#d6ddfe",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#fb637e",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#d6ddfe",
    "statusBar.background": "#a5b4fc",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#748bfa",
    "statusBarItem.remoteBackground": "#a5b4fc",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#a5b4fc",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#a5b4fc99",
    "titleBar.inactiveForeground": "#15202b99"
  }
}
