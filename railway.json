{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun run build"
  },
  "deploy": {
    "preDeployCommand": ["bun run db:migrate:deploy"],
    "startCommand": "bun run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "never"
  }
}
